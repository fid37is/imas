{
  "name": "inventory-management-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Inventory Management System with Google Drive and Sheets integration",
  "main": "index.js",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
    "emulators": {
      "functions": {
        "port": 5500
      },
      "firestore": {
        "port": 8080
      },
      "auth": {
        "port": 9099
      },
      "ui": {
        "enabled": true,
        "port": 4000
      }
    
  },
  "dependencies": {
    "@google-cloud/storage": "^6.9.4",
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^4.2.1",
    "googleapis": "^110.0.0",
    "sharp": "^0.31.3"
  },
  "private": true
}